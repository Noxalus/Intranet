<div class="next_courses_block">
    <h3>Cours à venir</h3>
    {% if schedules|length > 0 %}
    <ul>
        {% for schedule in schedules %}
            <li>
                Le {{ schedule.date|date('d/m') }} à {{ schedule.date|date('H') }}h{{ schedule.date|date('i') }}:<br />
                {{ schedule.type.name }} (pendant {{ schedule.duration / 60 }}h)
            </li>
        {% endfor %}
    </ul>
    {% else %}
        <p class="text-error">Aucun cours à venir !</p>
    {% endif %}
</div>