<div class="next_courses_block">
    <h2>Cours à venir</h2>
    {% if schedules|length > 0 %}
    <ul>
        {% for schedule in schedules %}
            <li>
                <b>Le {{ schedule.date|date('d/m') }} à {{ schedule.date|date('H') }}h{{ schedule.date|date('i') }}</b>:<br />
                {{ schedule.type.name }} (pendant {{ schedule.duration / 60 }}h)
            </li>
        {% endfor %}
    </ul>
    {% else %}
    <ul>
        <li class="text-error">Aucun cours à venir !</li>
    </ul>
    {% endif %}
</div>