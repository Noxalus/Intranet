{% extends 'IntranetCoreBundle:Core:layout.html.twig' %}

{% block content %}

{% include 'IntranetForumBundle:Includes:topic.html.twig' %}

{% if topic.posts|length > 0 %}
    <div>
    {% for post in topic.posts %}
        {% include 'IntranetForumBundle:Includes:post.html.twig' %}
    {% endfor %}
    </div>
{% endif %}

<hr />

<a href="{{ path('forum_display_category', {'id': topic.category.id }) }}" class="btn btn-inverse"><i class="icon-white icon-chevron-left"></i> Retour à la liste des sujets</a>
<a href="{{ path('forum_add_post', {'topic_id': topic.id}) }}" class="btn btn-success">Répondre</a>

{% endblock %}