<form method="POST" action="#" {{ form_enctype(form) }}>
    <fieldset>
        <div class="fileupload fileupload-new" data-provides="fileupload">
            <span class="fileupload-new"><span class="btn btn-file">Fichier{{ form_widget(form.file) }}</span></span>
            <span class="fileupload-preview"></span>
            <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">Ã—</a>
            <span class="fileupload-exists">
                <button type="submit" class="btn btn-success"><i class="icon-white icon-ok"></i> Envoyer</button>
                {{ form_widget(form.md5) }}
            </span>
        </div>
        {{ form_rest(form) }}
    </fieldset>
</form>