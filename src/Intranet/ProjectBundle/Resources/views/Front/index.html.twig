{% extends 'IntranetCoreBundle:Core:layout.html.twig' %}

{% block content %}
    <h1>Projets</h1>
    
    {% if is_granted('ROLE_TEACHER') %}
    <div>
        <ul>
            <li><a href="{{ path('projects_add') }}" />Ajouter un projet</a></li>
            <li><a href="{{ path('projects_group_add') }}" />Cr√©er un groupe de projet</a></li>
        </ul>
    </div>
    {% endif %}
    
    {% if projects|length > 0 %}
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prochaine deadline</th>
                {% if is_granted('ROLE_TEACHER') %}
                    <th>Action</th>
                {% endif %}
            </tr>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('projects_display', {'id': project.id}) }}">{{ project.name }}</a></td>
                <td>{{ project.description }}</td>
                <td>
                    {% if project.getDeadlines()|length > 0 %}
                        {{ project.getDeadlines()[0].date|date('Y/m/d h:i:s') }}<br />
                    {% else %}
                        Aucune
                    {% endif %}
                </td>
                <td>
                    <a href="#" class="btn btn-warning btn-mini"><i class="icon-white icon-edit"></i> Editer</a>
                    <a href="#" class="btn btn-danger btn-mini"><i class="icon-white icon-remove"></i> Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </ul>
        </table>
    {% else %}
        <p class="text-error">Aucun projet !</p>
    {% endif %}
{% endblock %}

