{% extends 'IntranetCoreBundle:Core:layout.html.twig' %}

{% block content %}
<h2>Vous êtes sur le point de supprimer un article.</h2>
 
  <p>
    Êtes-vous sur de vouloir supprimer du wiki l'article "{{ article.name }}" ?
  </p>
 
  <form method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
  </form>
{% endblock %}