{% block content %}

<h1>Liste des tickets</h1>

{% if ticketsNR|length > 0 %}
<h3>Tickets nons lus</h3>
<table class="table">
    <tr>
        <th style="width: 150px;">Statuts</th>
        <th>Nom</th>
    </tr>
    <tr>
        {% for tick in ticketsNR %}
            <td>
                {{tick.state}}
            </td>
            <td>
               <a href="{{ path('show_ticket', {'id' : tick.id}) }}">{{tick.title}}</a><br/>
